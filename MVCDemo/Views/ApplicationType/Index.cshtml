@model IEnumerable<MVCDemo.Models.ApplicationType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="ApplicationType" asp-action="Create">
                Create New Application Type
            </a>
        </div>
    </div>
</div>

<br />
<br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="widht:100%">
            <thead>
                <tr>
                    <th>
                        Application Type Name
                    </th>                    
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
    <p>No Application Type Exists.</p>
    }


@{
    ViewData["Title"] = "Index";
}