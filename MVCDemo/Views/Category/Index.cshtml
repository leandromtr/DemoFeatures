@model IEnumerable<MVCDemo.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create">
                Create New Category
            </a>
        </div>
    </div>
</div>

<br />
<br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="widht:100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="50%">@obj.DisplayOrder</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Category Exists.</p>
    }


@{
    ViewData["Title"] = "Index";
}